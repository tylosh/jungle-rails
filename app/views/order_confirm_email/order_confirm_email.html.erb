<html>
  <body>
    <%= yield %>

  <p><%= "Your order was for $#{Money.new(@order.total_cents, "USD")}." %> </p>

  <table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="2">Product</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.line_items.each do |item| %>
      <% puts item.id %>
      <%= render 'item', product: item.product, quantity: item.quantity.to_i %>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="4">
        TOTAL:
      </th>
      <th>
        <%= @order.total_cents / 100.0 %>
      </th>
    </tr>
  </tfoot>
</table>


  


  </body>
</html>
